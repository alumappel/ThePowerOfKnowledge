@inject NavigationManager nav


@*חלונית פופ אפ*@
<MudDialog>
    <DialogContent>
        @*לפה נכנס התוכן מהעמוד*@
        <MudText>@ContentText</MudText>
    </DialogContent>
    @*פה כל הפעולות של החלונית*@
    <DialogActions>
        @*כפתור שחוזר לעמוד הבית*@
        <MudButton Color="Color.Primary" OnClick="Submit">@ButtonText</MudButton>
    </DialogActions>
</MudDialog>


@code {
    //  פרמטר שמקבל את כל ההגדרות והפרמטרים שנתנו בדף
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    //    פרמטר שמקבל את הטקסט של התוכן
    [Parameter] public string ContentText { get; set; }

    //פרמטר שמקבל את התוכן של כפתור אישור
    [Parameter] public string ButtonText { get; set; }


    //    פונקצייה שמנווטת לעמוד הבית בלחיצה על הכפתור
    private void Submit()
    {
        if (ButtonText == "הבנתי")
        {
            MudDialog.Cancel();
        }
        else
        {
            nav.NavigateTo("./");
        }

    }




}